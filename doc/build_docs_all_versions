#!/usr/bin/env bash
set -e

script_dir="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
if [ ! -f doc-builder/build_docs_all_versions ]; then
    "${script_dir}"/../bin/git-fleximod update doc-builder
fi

cd "${script_dir}"

echo "Running: make fetch-images"
make fetch-images

echo "Running: ./doc-builder/build_docs_all_versions $@"
pwd
./doc-builder/build_docs_all_versions "$@"

exit 0